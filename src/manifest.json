{
  "name": "Newtab Random Pixiv Images",
  "version": "0.2.0",
  "manifest_version": 3,
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "*://*.pixiv.net/*",
    "*://*.pximg.net/*"
  ]
}